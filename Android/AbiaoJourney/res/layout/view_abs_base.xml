    <com.ihakula.journey.view.pullrefreshview.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res/com.ihakula.journey"
        android:id="@+id/lv_result"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        ptr:ptrMode="pullUpFromBottom" />
    
	<RelativeLayout 
        android:id="@+id/pb_linear"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"       
		android:layout_gravity="center"
        >
        <LinearLayout 
 			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"       
			android:layout_centerInParent="true"     
            >
			<ProgressBar
  				android:id="@+id/install_pb"
  				android:layout_width="25dip"
  				android:layout_height="25dip"
  				android:indeterminate="false"
  				android:indeterminateDrawable="@drawable/pb"
  				android:visibility="visible"
  				/>
			<TextView 
  				android:layout_width="wrap_content"
  				android:layout_height="25dip"
  				android:gravity="center_vertical"
  				android:layout_marginLeft="2dip"
  				android:textColor="@color/color_orange"
  				android:textStyle="bold"
  				android:text="正在载入..."			    
			    />             
        </LinearLayout>
       
