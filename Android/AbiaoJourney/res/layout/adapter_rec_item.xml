<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="@drawable/list_bg_selector"
     >
 	<!-- 左侧应用信息 -->
    <LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"    
    	android:orientation="horizontal"
    	android:layout_alignParentLeft="true"   
    	android:layout_centerVertical="true"
        >
		<!--     		android:background="@drawable/icon_default" -->
        <ImageView 
            android:id="@+id/app_icon"
     		android:layout_width="48dip"
    		android:layout_height="48dip"
    		android:scaleType="centerInside"         
    		android:layout_gravity="center"
    		android:layout_marginLeft="12dip"
            />
 		
        <LinearLayout 
     		android:layout_width="120dip"
    		android:layout_height="wrap_content"    
    		android:orientation="vertical"  
    		android:layout_marginLeft="12dip"     
            >
   			<TextView 
   			    android:id="@+id/app_name"
   			    style="@style/adapter_text"
   			    android:textColor="@drawable/light_text_selector"
   			    android:textSize="@dimen/rec_item_appname_size"
   			    android:singleLine="true"
   			    />         
        	<RatingBar 
            	android:id="@+id/app_rating"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginTop="8dip"
            	android:numStars="5"
            	android:isIndicator="true"
            	android:rating="0"
            	android:stepSize="0.5"
            	/> 			           
        </LinearLayout>
        
    </LinearLayout>
	
    <!-- 右侧下载信息 -->
 	
 <LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"    
    	android:orientation="horizontal"
    	android:layout_alignParentRight="true"    
    	android:layout_centerVertical="true"   		    
 	    >
        
 		<LinearLayout 
 	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"    
    		android:orientation="vertical"	
    		android:layout_gravity="center_vertical"
    		android:gravity="center_vertical"
 		    >
			<TextView 
   			    android:id="@+id/app_size"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
   			    android:gravity="right"
   			    android:layout_gravity="right"
   			    android:textColor="@drawable/light_text_selector"
   			    android:textSize="@dimen/rec_item_right_size"
   			    android:layout_marginTop="4dip"
   			    />   		    
			<TextView 
   			    android:id="@+id/app_download_count"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
             	android:layout_marginTop="4dip"  			    
   			    android:textColor="@drawable/light_text_selector"   
   			    android:textSize="@dimen/rec_item_right_size"			
   			    android:gravity="right"  
   			    android:layout_gravity="right"   			    
   			    />  		    
 		</LinearLayout>	
 		

 
		<LinearLayout 
 		    android:id="@+id/download_linear"
 	    	android:layout_width="56dip"
    		android:layout_height="64dip"    
    		android:orientation="vertical"	  
    		android:layout_gravity="center_vertical"		
     		android:background="@drawable/list_bg_selector"   	    
 		    >
 			
  			<ImageView 
  			    android:id="@+id/download_img"
     			android:layout_width="40dip"
    			android:layout_height="40dip"
    			android:scaleType="centerInside"
    			android:src="@drawable/dot_normal"  
 		    	android:layout_gravity="center_horizontal"
 		    	/>	    
			<TextView 
			    android:id="@+id/status_text"
   			    android:layout_width="fill_parent"
   			    android:layout_height="wrap_content"	    
   			    android:text="更新"
   			    android:textSize="@dimen/rec_item_right_size"
				android:gravity="center"
				android:layout_gravity="center_horizontal"
				android:textColor="@drawable/light_text_selector"			
				android:layout_marginTop="-4dip"
   			    />		    		    
 		</LinearLayout>
 				
 	</LinearLayout>
 	   
</RelativeLayout>